{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "App": ["src/"],
            "Pages/*": ["src/Pages/*"]
        },
        "noEmit": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "exclude": [
        "node_modules"
    ]
}